{
  "name": "@xwp/vip-go-site",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "engines": {
    "node": "^12.16.0"
  },
  "scripts": {
    "preinstall": "composer install --working-dir=public",
    "lint-release": "composer lint-release --working-dir=public",
    "lint": "composer lint --working-dir=public && composer verify --working-dir=public",
    "release": "composer release --working-dir=public",
    "clean": "rm -rf node_modules public/plugins/vendor",
    "deploy-staging": "./scripts/deploy.sh https://github.com/Automattic/vip-go-skeleton.git develop",
    "deploy-production": "./scripts/deploy.sh https://github.com/Automattic/vip-go-skeleton.git master"
  },
  "devDependencies": {
    "husky": "^4.2.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint"
    }
  }
}
